{% extends 'base.html.twig' %}

{% block title %}Organisation{% endblock %}

{% block body %}
    <h1>Organisation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ organisation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ organisation.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ organisation.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ organisation.lastname }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ organisation.mail }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ organisation.picture }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ organisation.password }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ organisation.roles ? organisation.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('organisation_index') }}">back to list</a>

    <a href="{{ path('organisation_edit', {'id': organisation.id}) }}">edit</a>

    {{ include('organisation/_delete_form.html.twig') }}
{% endblock %}
