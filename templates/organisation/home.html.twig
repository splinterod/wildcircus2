{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
                <a class="nav-item nav-link nav-item nav-link text-secondary" href="{{ path('home') }}">J'ai plus envie d'etre
                    connecté</a>
        </div>

    {%  if organisation is not null %}
        <div class="row">
            <div class="card border-light text-white bg-dark mb-3 w-100" >
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{ organisation[0].picture }}" class="card-img img-thumbnail" style="max-height: 300px;">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{ organisation[0].name }}</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{#                card presentation show#}
        <div class="row">
            <h3 class="borderWhiteBottom">Les Productions de Pectacles</h3>
            <a class="nav-item nav-link fontColorSecondary" href="{{ path('spectacles_new' , { id:organisation[0].id} ) }}">Ajouter un super
                Pectacles</a>
        </div>

        {% for spectacle in organisation[0].spectacles %}
            <div class="row">
                <div class="card  text-white bg-dark mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="/uploads/images/users/{{ spectacle.picture }}" class="card-img img-thumbnail" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">{{ spectacle.name }}</h5>
                                <p class="card-text"> Lieu de représentation: {{ spectacle.location }}</p>
                                <p class="card-text"> Date de la représentation: {{ spectacle.date|date("m/d/Y") }}</p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

        <div class="row">
            <h3 class="borderWhiteBottom">Rencontrer nos Artistes!!!</h3>
            <a class="nav-item nav-link fontColorSecondary" href="{{ path('shows_index' , { id:organisation[0].id} ) }}">
                Allez Viens, Tu verras, on sera Bien Bien Bien!!!
            </a>
        </div>

        </div>
    {%  endif %}
{#    </div>#}



{% endblock %}